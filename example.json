{
  "$schema": "http://interagent.github.io/interagent-hyper-schema",
  "type": [
    "object"
  ],
  "definitions": {
    "info": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "Info",
      "description": "Info",
      "stability": "prototype",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "id": {
          "description": "ID",
          "readOnly": true,
          "format": "uuid",
          "type": [
            "string"
          ]
        },
        "title": {
          "description": "タイトル",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "content": {
          "description": "本文",
          "readOnly": true,
          "type": [
            "string"
          ]
        },
        "identity": {
          "$ref": "#/definitions/info/definitions/id"
        },
        "published_at": {
          "description": "公開日時",
          "format": "date-time",
          "example": "2016-02-01T12:13:14Z",
          "type": [
            "string"
          ]
        }
      },
      "links": [
        {
          "href": "/info",
          "method": "GET",
          "rel": "instances",
          "title": "お知らせ一覧"
        }
      ],
      "properties": {
        "publishedAt": {
          "$ref": "#/definitions/info/definitions/published_at"
        },
        "id": {
          "$ref": "#/definitions/info/definitions/id"
        },
        "title": {
          "$ref": "#/definitions/info/definitions/title"
        },
        "content": {
          "$ref": "#/definitions/info/definitions/content"
        }
      }
    },
    "user": {
      "$schema": "http://json-schema.org/draft-04/hyper-schema",
      "title": "ユーザ",
      "description": "ユーザ",
      "stability": "prototype",
      "strictProperties": true,
      "type": [
        "object"
      ],
      "definitions": {
        "id": {
          "description": "ID",
          "readOnly": true,
          "format": "uuid",
          "example": "01234567-89ab-cdef-0123-456789abcdef",
          "type": [
            "string"
          ]
        },
        "firstName": {
          "description": "名",
          "readOnly": true,
          "example": "わかる",
          "type": [
            "string"
          ]
        },
        "lastName": {
          "description": "姓",
          "readOnly": true,
          "example": "わたり",
          "type": [
            "string"
          ]
        },
        "birthday": {
          "description": "生年月日",
          "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$",
          "example": "1985-04-20",
          "type": [
            "string"
          ]
        },
        "addressState": {
          "description": "都道府県",
          "example": "東京都",
          "type": [
            "string"
          ]
        },
        "addressCity": {
          "description": "市区町村",
          "example": "渋谷区",
          "type": [
            "string"
          ]
        },
        "addressLine1": {
          "description": "番地など",
          "example": "渋谷1-2-3",
          "type": [
            "string"
          ]
        },
        "addressLine2": {
          "description": "建物名など",
          "example": "KKビル202",
          "type": [
            "string"
          ]
        },
        "addressZip": {
          "description": "郵便番号",
          "example": "1000001",
          "type": [
            "string"
          ]
        },
        "tel": {
          "description": "携帯電話番号",
          "example": "09012345678",
          "type": [
            "string"
          ]
        },
        "registeredAt": {
          "description": "登録日時",
          "format": "date-time",
          "example": "2015-12-19T12:13:14Z",
          "type": [
            "string"
          ]
        }
      },
      "links": [
        {
          "description": "ユーザ登録",
          "href": "/users",
          "method": "POST",
          "rel": "create",
          "schema": {
            "properties": {
              "firstName": {
                "$ref": "#/definitions/user/definitions/firstName"
              },
              "lastName": {
                "$ref": "#/definitions/user/definitions/lastName"
              },
              "birthday": {
                "$ref": "#/definitions/user/definitions/birthday"
              }
            },
            "type": [
              "object"
            ],
            "required": [
              "firstName",
              "lastName",
              "email",
              "birthday"
            ]
          },
          "title": "登録"
        },
        {
          "description": "ログイン中ユーザのアカウント情報",
          "href": "/users/me",
          "method": "GET",
          "rel": "self",
          "title": "ログインアカウント情報",
          "schema": {
            "properties": {
              "fields": {
                "description": "取得するプロパティをカンマ区切りで指定する。無指定の場合は全てのプロパティを取得する。",
                "readOnly": true,
                "type": [
                  "string"
                ]
              }
            },
            "type": [
              "object"
            ]
          },
          "http_header": {
            "Authorization": "Bearer abcdefghijklmnopqrstuvwxyzabcdefghijklmn",
            "Content-Type": "application/json"
          }
        }
      ],
      "properties": {
        "id": {
          "$ref": "#/definitions/user/definitions/id"
        },
        "firstName": {
          "$ref": "#/definitions/user/definitions/firstName"
        },
        "lastName": {
          "$ref": "#/definitions/user/definitions/lastName"
        },
        "birthday": {
          "$ref": "#/definitions/user/definitions/birthday"
        },
        "tel": {
          "$ref": "#/definitions/user/definitions/tel"
        },
        "registeredAt": {
          "$ref": "#/definitions/user/definitions/registeredAt"
        },
        "addressZip": {
          "$ref": "#/definitions/user/definitions/addressZip"
        },
        "addressState": {
          "$ref": "#/definitions/user/definitions/addressState"
        },
        "addressCity": {
          "$ref": "#/definitions/user/definitions/addressCity"
        },
        "addressLine1": {
          "$ref": "#/definitions/user/definitions/addressLine1"
        },
        "addressLine2": {
          "$ref": "#/definitions/user/definitions/addressLine2"
        },
        "infos": {
          "description": "infos",
          "type": [
            "array"
          ],
          "items": {
            "$ref": "#/definitions/info"
          }
        }
      },
      "required": [
        "id",
        "email",
        "firstName",
        "lastName",
        "birthday",
        "registeredAt"
      ]
    }
  },
  "properties": {
    "info": {
      "$ref": "#/definitions/info"
    },
    "user": {
      "$ref": "#/definitions/user"
    }
  },
  "description": "API",
  "id": "example",
  "links": [
    {
      "href": "https://api.example.com",
      "rel": "self"
    }
  ],
  "title": "API JSON Schema"
}
